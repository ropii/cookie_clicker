<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#552719"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".game">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Game"
        android:textColor="#AC3C19"
        android:textSize="60dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/cookie"
        android:id="@+id/ibtn_cookie"
        android:backgroundTint="#552719"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Taps- 1"
        android:textColor="#AC3C19"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tv_taps"
        />
    <TextView
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Point- 0"
        android:textColor="#AC3C19"
        android:id="@+id/tv_points"
        />
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/btn_buy"
        android:backgroundTint="#AC3C19"
        android:text="buy a tap at 5" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/btn_back_to_main"
        android:backgroundTint="#AC3C19"
        android:text="back to main" />


</LinearLayout>